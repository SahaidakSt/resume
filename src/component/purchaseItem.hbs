<div class='row'>
  <div class='col-4'>
    {{number}}
    <br />
    <b>{{status}}</b>
  </div>
  <div class='col-2'>
    {{amount.title}}
    <br />
    <b>{{amount.value}}</b>
  </div>
  <div class='col-4'>
    <div class='row'>
      {{#each images}}
        <div class='col-4 px-1'>
          <img src={{this}} class='card-img-top' />
        </div>
      {{/each}}
    </div>
  </div>
  <div class='col-2 p-2'>
    {{#with button}}
      <a
        type='button'
        href={{link}}
        class='{{#if isPrimary}}btn btn-primary{{/if}}'>
        {{text}}
      </a> 
    {{/with}}

  </div>

</div>