<main>
  <section class='row'>
    {{#with formBlock}}
      <div class='col-8'>
        <h1 class='mb-4'>{{header}}</h1>
        <p>{{rating.title}}: {{rating.value}}</p>
        {{#with actionBlock}}
          <div class='nav nav-tabs'>
            {{#each tabs}}
              <div class='nav nav-items'>
                <div 
                class='nav-link {{#if isActive}}active{{/if}} '>
                {{text}}
              </div>
              </div>
            {{/each}}
          </div>
          <hr />
          {{#with field}}
            <div class='card'>
              <div class='card-body'>
                {{!-- <div class='row'>    замінив на input-group
                  <div class='col-6'>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                  </div>
                  <div class='col-6 text-end'>
                    <a
                      type='button'
                      href={{button.link}}
                      class='btn btn-secondary'
                    >
                      {{button.text}}
                    </a>
                  </div>
                </div> --}}
                <div class='input-group'>
                  <input
                    type='text'
                    class='form-control'
                    {{!-- placeholder={{placeholder}} - обрізає по першому слову--}}
                    placeholder='Залиште відгук про товар'
                  />
                  <a
                    class='btn btn-secondary'
                    type='button'
                    href={{button.link}}
                  >{{button.text}}</a>
                </div>
              </div>
            </div>
          {{/with}}
          <hr />
        {{/with}}
        {{#with feedbackBlock}}
          <h2 class='my-5'>{{title}}</h2>
          {{#each buttons}}
            <a
              type='button'
              href={{link}}
              class='mb-3
                    btn 
                    {{#if isWarning}}btn-warning{{/if}}
                    {{#if isSuccess}}btn-success{{/if}}
                    {{#if isDanger}}btn-danger{{/if}}
                    '
            >
              {{text}}
            </a>
          {{/each}}
        {{/with}}
      </div>
      <div class='col-4'>
        {{#with goodsInfo}}
          <div class='card ps-3 pt-3 mb-3'>
            <img
              src={{photo}}
              alt={{name}}
              class='pe-5 me-5'
            />
            <div class='card-body p-0 m-0'>
              <h5 class='card-title'>{{name}}</h5>
            </div>
          </div>
          <div class='card p-3 mb-3'>
            <div class='card-body p-0 m-0'>
              <h5>{{price}}</h5>
              Є в наявності
              <br />
              {{#each buttons}}
                <a
                  class='btn 
                        {{#if isPrimary}}btn-primary {{/if}} 
                        {{#if isSecondary}}btn-secondary {{/if}} 
                        mt-2
                        '
                  type='button'
                  href={{link}}
                >{{text}}</a>
                <br />
              {{/each}}
            </div>
          </div>
          <div class='card p-3 mb-3'>
            <div class='card-body p-0 m-0'>
              {{seller.title}}:
              <b>{{seller.value}}</b>
            </div>
          </div>
        {{/with}}
      </div>
      <hr />
    {{/with}}
  </section>
  <section>
    <div class='row'>
      <div class='col-12'>
        <div class='card'>
          <div class='card-body'>
            {{#each reviewList}}
              {{>shopreviewItem}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </section>
  {{>shopaction}}
  <hr>
</main>